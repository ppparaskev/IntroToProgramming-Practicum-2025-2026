// Function2.cpp : This file contains the 'main' function. Program execution begins and ends there.
//

#include <iostream>
using namespace std;

unsigned reversedNumber(unsigned number)
{
	unsigned reversed = 0, br = 0;
	while (number > 0)
	{
		unsigned lastDigit = number % 10;
		reversed = (reversed * 10) + lastDigit;
		number /= 10;
	}
	return reversed;
}

int main()
{
	unsigned number;

	cout << "Enter positive number: ";
	cin >> number;

	cout << "Reversed number: " << reversedNumber(number);
}

